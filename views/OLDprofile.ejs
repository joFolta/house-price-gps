<!doctype html>
<html>

<head>
  <title>House Price GPS</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
  <link rel="stylesheet" href="style.css">
  <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
  <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v1.1.0/mapbox-gl.js'></script>
  <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v1.1.0/mapbox-gl.css' rel='stylesheet' />
</head>

<body>
  <header>
    <h2>Welcome <span id="currentUser"><%= user.local.username %></span></h2>
    <h1><i class="fas fa-home"></i> House Price GPS <i class="fas fa-map-marked-alt"></i></h1>

  </header>
  <label for="findLatLongAddress">1) Click: </label>
  <button id="findLatLongAddress">Find Me</button><br>

  <label for="getZestimate">2) Click: </label>
  <button id="getZestimate" name="getZestimate">Get Property Price</button><br>

  <label for="saveHouse">3) Click: </label>
  <button id="saveHouse" name="saveHouse">Save House</button>

  <p id="findMeStatus"></p>
  <!-- LINK TO EXTERNAL MAP 1 OF 3 -->
  <!-- <a id="map-link" target="_blank"></a> -->

  <label for="rawAddress">Address: </label>
  <p id="rawAddress"></p><br />

  <label for="zestimate">Property Valuation: </label>
  <p id="zestimate"></p>









  <section id="mapContainer">
    <!-- <img id="tempImg" src="img/stillmap.png" alt=""> -->
    <div id='map'></div>
  </section>

  <section>
    <h2>Saved Houses</h2>
    <ol>
      <% for(var i=0; i<savedHouses.length; i++) {%>
      <li>
        <h4>
          <span><i class="far fa-trash-alt" aria-hidden="true"></i></span>
          <span><i class="fas fa-caret-square-up" aria-hidden="true"></i></span>
          <span><%= savedHouses[i].thumbCount %></span>
          <span><i class="fas fa-caret-square-down" aria-hidden="true"></i></span>
          <span><%= savedHouses[i].rawAddress %></span>
          <a href="/savedHouses/<%= savedHouses[i]._id %>">Link</a>
        </h4>
        <span><%= savedHouses[i].latitude %></span>
        <span><%= savedHouses[i].longitude %></span>
      </li>
      <% } %>
    </ol>
  </section>

  <section>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </section>

  <!-- <footer>
  <a href="https://pixabay.com"><img id="logo" src="img/requiredLogo.svg" alt=""></a>
</footer> -->
  <script src="main.js"></script>
</body>

</html>
